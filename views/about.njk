{% extends "layout.njk" %}

{% block content %}

    <div class="wrapper">
        <img src="{{ about.avatar_path }}" alt="Imagem de {{about.name}}">
        <h1>{{about.name}}</h1>
        <h2>{{about.description}}</h2>
        <p>    Atividades Atuais -
            {% for activitie in about.activities %}
                <a href="{{activitie.url}}" target="_blank">{{activitie.name}}</a>
            {% endfor %}
        </p>
    </div>
    <div class="midia">
        {% for link in about.links %}
            <a href="{{link.url}}" target="_blank"><img src="{{link.image_path}}" alt="imagem de {{link.url}}}"></a>
        {% endfor %}
    </div>

{% endblock %}